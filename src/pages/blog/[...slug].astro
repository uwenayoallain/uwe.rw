---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
    const posts = await getCollection("posts");
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: post,
    }));
}
type Props = CollectionEntry<"posts">;

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description}>
    <div class="progress-container">
        <div class="progress-bar"></div>
    </div>

    <article class="blog-post section">
        <div class="post-header">
            <a href="/" class="back-link font-mono text-muted">
                <span class="arrow">&larr;</span> Back to Home
            </a>
            <div class="meta font-mono text-muted">
                <span class="date">
                    {
                        post.data.pubDate.toLocaleDateString("en-US", {
                            year: "numeric",
                            month: "long",
                            day: "numeric",
                        })
                    }
                </span>
                <span class="separator">/</span>
                <span class="tag">{post.data.tags[0]}</span>
            </div>
            <h1 class="title text-display split-text">{post.data.title}</h1>
        </div>

        {
            post.data.heroImage && (
                <div class="hero-image-wrapper">
                    <img
                        src={post.data.heroImage}
                        alt={post.data.title}
                        class="hero-image"
                        data-speed="0.5"
                    />
                </div>
            )
        }

        <div class="content-wrapper">
            <div class="content">
                <Content />
            </div>
        </div>
    </article>
</Layout>

<script>
    import gsap from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    import { animateHeroText } from "../../lib/animations.js";

    gsap.registerPlugin(ScrollTrigger);

    function initBlogPost() {
        gsap.to(".progress-bar", {
            scaleX: 1,
            ease: "none",
            scrollTrigger: {
                trigger: "body",
                start: "top top",
                end: "bottom bottom",
                scrub: 0.3,
            },
        });

        animateHeroText(".split-text");

        const heroImage = document.querySelector(".hero-image");
        if (heroImage) {
            gsap.to(heroImage, {
                yPercent: 30,
                ease: "none",
                scrollTrigger: {
                    trigger: ".hero-image-wrapper",
                    start: "top bottom",
                    end: "bottom top",
                    scrub: true,
                },
            });
        }

        const contentElements = document.querySelectorAll(".content > *");
        if (contentElements.length > 0) {
            gsap.from(contentElements, {
                y: 30,
                opacity: 0,
                duration: 0.8,
                stagger: 0.05,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: ".content",
                    start: "top 85%",
                },
            });
        }

        gsap.from([".back-link", ".meta"], {
            y: -20,
            opacity: 0,
            duration: 0.8,
            stagger: 0.1,
            ease: "power2.out",
            delay: 0.1,
        });
    }

    document.addEventListener("astro:page-load", initBlogPost);
</script>

<style>
    .progress-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        z-index: 1000;
        pointer-events: none;
    }

    .progress-bar {
        height: 100%;
        background: var(--color-brand-gold);
        width: 100%;
        transform: scaleX(0);
        transform-origin: left;
    }

    .blog-post {
        padding-top: var(--space-2xl);
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
        padding-bottom: var(--space-2xl);
    }

    .post-header {
        margin-bottom: var(--space-2xl);
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .back-link {
        align-self: center;
        margin-bottom: var(--space-xl);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: var(--text-sm);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        transition: all 0.3s ease;
        padding: 8px 16px;
        border: 1px solid var(--color-border);
        border-radius: 100px;
        background: rgba(255, 255, 255, 0.03);
    }

    .back-link:hover {
        background: var(--color-text);
        color: var(--color-bg);
        border-color: var(--color-text);
    }

    .meta {
        display: flex;
        gap: var(--space-sm);
        justify-content: center;
        margin-bottom: var(--space-lg);
        font-size: var(--text-sm);
        text-transform: uppercase;
        letter-spacing: 0.15em;
        opacity: 0.7;
    }

    .title {
        font-size: clamp(3rem, 8vw, 6rem);
        line-height: 0.95;
        letter-spacing: -0.03em;
        margin-bottom: var(--space-lg);
        text-wrap: balance;
    }

    .hero-image-wrapper {
        margin-bottom: var(--space-2xl);
        border-radius: var(--radius-md);
        overflow: hidden;
        aspect-ratio: 21/9;
        position: relative;
        width: 100%;
        max-width: 900px;
    }

    .hero-image {
        width: 100%;
        height: 130%;
        object-fit: cover;
        position: relative;
        top: -10%;
    }

    .content-wrapper {
        max-width: 720px;
        margin: 0 auto;
    }

    .content {
        font-size: 1.25rem;
        line-height: 1.7;
        color: var(--color-text-muted);
    }

    .content :global(h2) {
        font-family: var(--font-display);
        font-size: var(--text-3xl);
        margin-top: var(--space-2xl);
        margin-bottom: var(--space-md);
        color: var(--color-text);
        letter-spacing: -0.02em;
        line-height: 1.1;
    }

    .content :global(h3) {
        font-family: var(--font-display);
        font-size: var(--text-xl);
        margin-top: var(--space-xl);
        margin-bottom: var(--space-sm);
        color: var(--color-text);
    }

    .content :global(p) {
        margin-bottom: var(--space-lg);
    }

    .content :global(a) {
        color: var(--color-brand-gold);
        text-decoration: none;
        border-bottom: 1px solid transparent;
        transition: border-color 0.3s ease;
    }

    .content :global(a:hover) {
        border-color: var(--color-brand-gold);
    }

    .content :global(blockquote) {
        border-left: 4px solid var(--color-brand-gold);
        padding-left: var(--space-lg);
        margin: var(--space-xl) 0;
        font-size: 1.5rem;
        font-style: italic;
        color: var(--color-text);
        font-family: var(--font-display);
    }

    .content :global(ul),
    .content :global(ol) {
        margin-bottom: var(--space-lg);
        padding-left: var(--space-xl);
    }

    .content :global(li) {
        margin-bottom: var(--space-xs);
    }

    .content :global(pre) {
        padding: var(--space-lg);
        border-radius: var(--radius-sm);
        margin: var(--space-xl) 0;
        overflow-x: auto;
        background: #0a0a0a !important;
        border: 1px solid var(--color-border);
        font-size: 0.9rem;
    }

    .content :global(code) {
        font-family: var(--font-mono);
    }

    .content :global(p > code) {
        background: rgba(255, 255, 255, 0.1);
        padding: 0.2em 0.4em;
        border-radius: 4px;
        font-size: 0.85em;
        color: var(--color-brand-gold);
    }

    .content :global(img) {
        width: 100%;
        border-radius: var(--radius-sm);
        margin: var(--space-xl) 0;
    }

    .content :global(hr) {
        border: 0;
        height: 1px;
        background: var(--color-border);
        margin: var(--space-2xl) 0;
    }
</style>
