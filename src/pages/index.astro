---
const siteName = 'uwe.rw';
const heroTitle = 'uwe';
const fallbackSite = 'https://uwe.rw/';
const canonicalUrl = Astro.site ? Astro.site.href : fallbackSite;
const ogImagePath = '/og.png';
const ogImageUrl = new URL(ogImagePath, canonicalUrl).toString();
const ogImageAlt =
  'uwe.rw · A keyboard-first inline calculator delivering live results with a purple spotlight interface.';
const ogImageWidth = '4796';
const ogImageHeight = '2520';
const title = `${siteName} · SAINT`;
const description =
  'uwe.rw is the minimal digital home of SAINT, sharing creative experiments, notes, and upcoming releases.';
const keywords = ['uwe.rw', 'SAINT', 'creative studio', 'digital experiments', 'portfolio'].join(', ');
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="theme-color" content="#000000" />
    <meta name="color-scheme" content="dark" />
    <link rel="canonical" href={canonicalUrl} />
    <ClientRouter />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:alt" content={ogImageAlt} />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content={ogImageWidth} />
    <meta property="og:image:height" content={ogImageHeight} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:image:alt" content={ogImageAlt} />
    <script type="application/ld+json" is:inline>{JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'WebSite',
      name: siteName,
      url: canonicalUrl,
      description
    })}</script>
  </head>
  <body class="uppercase">
    <main
      class="mx-auto flex min-h-screen w-full max-w-xl flex-col items-center justify-center gap-6 px-6 text-center lg:max-w-2xl"
      aria-labelledby="uwe-title"
    >
      <h1 id="uwe-title" class="font-display text-brand-gold text-[clamp(5rem,16vw,9rem)] font-bold leading-[0.95]">
        {heroTitle}
      </h1>
      <p
        class="max-w-[32ch] text-balance text-[clamp(1rem,3vw,1.25rem)] font-normal leading-relaxed tracking-[0.08em] text-brand-blush/80 normal-case"
      >
        SAINT crafts high-contrast digital stories, experiments, and releases from the heart of uwe.rw.
      </p>
      <footer class="font-display text-brand-stone text-[clamp(1rem,3vw,1.5rem)] font-medium tracking-[0.24em]">
        SAINT
      </footer>
    </main>
  </body>
</html>
