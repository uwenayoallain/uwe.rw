---
import Layout from "../../layouts/Layout.astro";

export function getStaticPaths() {
    const projects = [
        {
            title: "Project Alpha",
            category: "Web Design & Development",
            image: "/project_thumbnail_1.png",
            year: "2024",
            slug: "project-alpha",
            description:
                "A cutting-edge web application designed to revolutionize the way users interact with data.",
            content:
                "Detailed case study content goes here. This would typically include the challenge, solution, and results.",
        },
        {
            title: "Neon Horizon",
            category: "Brand Identity",
            image: "/project_thumbnail_1.png",
            year: "2023",
            slug: "neon-horizon",
            description:
                "A bold and vibrant brand identity for a futuristic tech startup.",
            content: "Detailed case study content goes here.",
        },
        {
            title: "Quantum Flow",
            category: "Interactive Experience",
            image: "/project_thumbnail_1.png",
            year: "2023",
            slug: "quantum-flow",
            description:
                "An immersive digital experience that explores the boundaries of web animation.",
            content: "Detailed case study content goes here.",
        },
        {
            title: "Echo Valley",
            category: "E-commerce",
            image: "/project_thumbnail_1.png",
            year: "2022",
            slug: "echo-valley",
            description:
                "A seamless e-commerce platform for a sustainable fashion brand.",
            content: "Detailed case study content goes here.",
        },
    ];

    return projects.map((project) => ({
        params: { slug: project.slug },
        props: { project },
    }));
}

const { project } = Astro.props;
---

<Layout title={`${project.title} | UWENAYO Alain Pacifique`}>
    <div class="progress-container">
        <div class="progress-bar"></div>
    </div>

    <article class="project-detail section">
        <div class="post-header">
            <a href="/works" class="back-link font-mono text-muted">
                <span class="arrow">&larr;</span> Back to Works
            </a>
            <div class="meta font-mono text-muted">
                <span class="year">{project.year}</span>
                <span class="separator">/</span>
                <span class="category">{project.category}</span>
            </div>
            <h1 class="title text-display split-text">{project.title}</h1>
        </div>

        {
            project.image && (
                <div class="hero-image-wrapper">
                    <img
                        src={project.image}
                        alt={project.title}
                        class="hero-image"
                        data-speed="0.5"
                    />
                </div>
            )
        }

        <div class="content-wrapper">
            <div class="content">
                <h2>Overview</h2>
                <p>{project.description}</p>
                <p>{project.content}</p>
            </div>
        </div>
    </article>
</Layout>

<script>
    import gsap from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    import { animateHeroText } from "../../lib/animations.js";

    gsap.registerPlugin(ScrollTrigger);

    function initProjectDetail() {
        gsap.to(".progress-bar", {
            scaleX: 1,
            ease: "none",
            scrollTrigger: {
                trigger: "body",
                start: "top top",
                end: "bottom bottom",
                scrub: 0.3,
            },
        });

        animateHeroText(".split-text");

        const heroImage = document.querySelector(".hero-image");
        if (heroImage) {
            gsap.to(heroImage, {
                yPercent: 30,
                ease: "none",
                scrollTrigger: {
                    trigger: ".hero-image-wrapper",
                    start: "top bottom",
                    end: "bottom top",
                    scrub: true,
                },
            });
        }

        const contentElements = document.querySelectorAll(".content > *");
        if (contentElements.length > 0) {
            gsap.from(contentElements, {
                y: 30,
                opacity: 0,
                duration: 0.8,
                stagger: 0.05,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: ".content",
                    start: "top 85%",
                },
            });
        }

        gsap.from([".back-link", ".meta"], {
            y: -20,
            opacity: 0,
            duration: 0.8,
            stagger: 0.1,
            ease: "power2.out",
            delay: 0.1,
        });
    }

    document.addEventListener("astro:page-load", initProjectDetail);
</script>

<style>
    .progress-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        z-index: 1000;
        pointer-events: none;
    }

    .progress-bar {
        height: 100%;
        background: var(--color-brand-gold);
        width: 100%;
        transform: scaleX(0);
        transform-origin: left;
    }

    .project-detail {
        padding-top: var(--space-2xl);
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
        padding-bottom: var(--space-2xl);
    }

    .post-header {
        margin-bottom: var(--space-2xl);
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .back-link {
        align-self: center;
        margin-bottom: var(--space-xl);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: var(--text-sm);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        transition: all 0.3s ease;
        padding: 8px 16px;
        border: 1px solid var(--color-border);
        border-radius: 100px;
        background: rgba(255, 255, 255, 0.03);
    }

    .back-link:hover {
        background: var(--color-text);
        color: var(--color-bg);
        border-color: var(--color-text);
    }

    .meta {
        display: flex;
        gap: var(--space-sm);
        justify-content: center;
        margin-bottom: var(--space-lg);
        font-size: var(--text-sm);
        text-transform: uppercase;
        letter-spacing: 0.15em;
        opacity: 0.7;
    }

    .title {
        font-size: clamp(3rem, 8vw, 6rem);
        line-height: 0.95;
        letter-spacing: -0.03em;
        margin-bottom: var(--space-lg);
        text-wrap: balance;
    }

    .hero-image-wrapper {
        margin-bottom: var(--space-2xl);
        border-radius: var(--radius-md);
        overflow: hidden;
        aspect-ratio: 21/9;
        position: relative;
        width: 100%;
        max-width: 900px;
    }

    .hero-image {
        width: 100%;
        height: 130%;
        object-fit: cover;
        position: relative;
        top: -10%;
    }

    .content-wrapper {
        max-width: 720px;
        margin: 0 auto;
    }

    .content {
        font-size: 1.25rem;
        line-height: 1.7;
        color: var(--color-text-muted);
    }

    .content h2 {
        font-family: var(--font-display);
        font-size: var(--text-3xl);
        margin-top: var(--space-2xl);
        margin-bottom: var(--space-md);
        color: var(--color-text);
        letter-spacing: -0.02em;
        line-height: 1.1;
    }

    .content h3 {
        font-family: var(--font-display);
        font-size: var(--text-xl);
        margin-top: var(--space-xl);
        margin-bottom: var(--space-sm);
        color: var(--color-text);
    }

    .content p {
        margin-bottom: var(--space-lg);
    }
</style>
