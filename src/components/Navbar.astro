<nav class="navbar">
    <div class="container">
        <div class="nav-content">
            <a href="/" class="logo magnetic-link">UWE.RW</a>

            <div class="nav-links">
                <a href="/works" class="nav-link magnetic-link">Works</a>
                <a href="/services" class="nav-link magnetic-link">Services</a>
                <a href="/about" class="nav-link magnetic-link">About</a>
                <a href="/blog" class="nav-link magnetic-link">Blog</a>
            </div>

            <div class="menu-toggle">
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
</nav>

<script>
    import gsap from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    function initNavbar() {
        const navbar = document.querySelector(".navbar") as HTMLElement;
        if (!navbar) return;

        gsap.from(navbar, {
            yPercent: -100,
            duration: 0.8,
            ease: "expo.out",
            delay: 0.2,
        });

        let lastScroll = 0;
        const scrollThreshold = 5;

        ScrollTrigger.create({
            start: "top top",
            end: 99999,
            onUpdate: (self) => {
                const currentScroll = self.scroll();
                const scrollDelta = currentScroll - lastScroll;
                const isScrollingDown = scrollDelta > scrollThreshold;
                const isScrollingUp = scrollDelta < -scrollThreshold;
                const isScrolled = currentScroll > 50;

                if (isScrolled) {
                    navbar.classList.add("scrolled");
                } else {
                    navbar.classList.remove("scrolled");
                }

                if (isScrollingDown && isScrolled) {
                    gsap.to(navbar, {
                        yPercent: -100,
                        duration: 0.25,
                        ease: "power2.out",
                        overwrite: true,
                    });
                } else if (isScrollingUp || !isScrolled) {
                    gsap.to(navbar, {
                        yPercent: 0,
                        duration: 0.25,
                        ease: "power2.out",
                        overwrite: true,
                    });
                }

                lastScroll = currentScroll;
            },
        });
    }

    document.addEventListener("astro:page-load", initNavbar);
</script>

<style>
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 100;
        padding: var(--space-md) 0;
        transition:
            padding 0.3s ease,
            background-color 0.3s ease,
            backdrop-filter 0.3s ease;
    }

    .navbar.scrolled {
        padding: var(--space-sm) 0;
        background: rgba(var(--color-bg-rgb), 0.8);
        backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .navbar:not(.scrolled) {
        mix-blend-mode: difference;
    }

    .navbar.scrolled .logo,
    .navbar.scrolled .nav-link {
        color: var(--color-text);
    }

    .nav-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo {
        font-family: var(--font-mono);
        font-weight: 700;
        font-size: var(--text-lg);
        color: var(--color-text);
        text-decoration: none;
        letter-spacing: -0.02em;
    }

    .nav-links {
        display: flex;
        gap: var(--space-md);
    }

    .nav-link {
        color: var(--color-text);
        text-decoration: none;
        font-size: var(--text-sm);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        position: relative;
        overflow: hidden;
    }

    .nav-link::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 1px;
        background-color: var(--color-text);
        transform: scaleX(0);
        transform-origin: right;
        transition: transform 0.4s var(--ease-out-expo);
    }

    .nav-link:hover::after {
        transform: scaleX(1);
        transform-origin: left;
    }

    .menu-toggle {
        display: none;
        flex-direction: column;
        gap: 6px;
        cursor: pointer;
    }

    .menu-toggle span {
        width: 24px;
        height: 2px;
        background-color: var(--color-text);
    }

    @media (max-width: 768px) {
        .nav-links {
            display: none;
        }

        .menu-toggle {
            display: flex;
        }
    }
</style>
